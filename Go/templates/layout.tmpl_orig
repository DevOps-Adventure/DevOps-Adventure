<!doctype html>
<title>{{block "title" .}}Welcome{{end}} | MiniTwit</title>
<link rel="stylesheet" type="text/css" href="{{urlFor "static" "filename=style.css"}}">
<div class="page">
  <h1>MiniTwit</h1>
  <div class="navigation">
    {{if .User}}
      <a href="{{urlFor "timeline"}}">my timeline</a> |
      <a href="{{urlFor "public_timeline"}}">public timeline</a> |
      <a href="{{urlFor "logout"}}">sign out [{{.User.Username}}]</a>
    {{else}}
      <a href="{{urlFor "public_timeline"}}">public timeline</a> |
      <a href="{{urlFor "register"}}">sign up</a> |
      <a href="{{urlFor "login"}}">sign in</a>
    {{end}}
  </div>

  {{with .Flashes}}
    {{if .}}
      <ul class="flashes">
        {{range .}}
          <li>{{.}}</li>
        {{end}}
      </ul>
    {{end}}
  {{end}}

  <div class="body">
    {{template "body" .}}
  </div>
  <div class="footer">
    MiniTwit &mdash; A Flask Application
  </div>
</div>
